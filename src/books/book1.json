{
  "title": "Interactive Animations Demo",
  "pages": [
    {
      "background": "/src/pages/book1/page1bg.png",
      "interactive": {
        "src": "/src/pages/book1/page1obj.png",
        "initial": { "top": "72%", "left": "52%", "width": "20%", "height": "20%", "transform": "translate(-50%, -50%)" },
        "animation": {
          "type": "grow",
